# Environment
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/adversarial_shield
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=adversarial_shield

# Redis
REDIS_URL=redis://localhost:6379/0

# MongoDB
MONGODB_URL=mongodb://localhost:27017/adversarial_shield

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# LLM API Keys
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
HUGGINGFACE_API_KEY=hf_your-huggingface-key-here

# Ollama (local LLM)
OLLAMA_BASE_URL=http://localhost:11434

# SIEM Integration
WAZUH_API_URL=
WAZUH_API_USERNAME=
WAZUH_API_PASSWORD=
SPLUNK_API_URL=
SPLUNK_API_TOKEN=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Model Configuration
DEFAULT_LLM_MODEL=gpt-4
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
DEFAULT_VISION_MODEL=gpt-4-vision-preview

# Attack Generation
MAX_ATTACK_GENERATION_CONCURRENT=10
ATTACK_TIMEOUT_SECONDS=300

# Guardrails
INJECTION_DETECTION_THRESHOLD=0.7
ANOMALY_DETECTION_THRESHOLD=0.8
PII_DETECTION_ENABLED=true
TOXICITY_DETECTION_ENABLED=true

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_MULTIMODAL_ATTACKS=true
ENABLE_STATIC_ANALYSIS=true
ENABLE_DYNAMIC_ANALYSIS=true
ENABLE_THREAT_MODELING=true
